<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="center|top"
        android:background="@color/colorNeutral"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo_big" />

        <CheckBox
            android:id="@+id/dark_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/logo_img"
            android:layout_alignBottom="@+id/logo_img"
            android:layout_toEndOf="@id/logo_img"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="Dark style"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/layoutContainer1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/layoutContainer2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_0"
                    style="@style/description_style"
                    android:text="Show material progress" />

                <Button
                    android:id="@+id/progress_dialog"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_1"
                    style="@style/description_style"
                    android:text="A basic message" />

                <Button
                    android:id="@+id/basic_test"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_1_1"
                    style="@style/description_style"
                    android:text="A basic message \nwithout buttons" />

                <Button
                    android:id="@+id/basic_test_without_buttons"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_2"
                    style="@style/description_style"
                    android:text="A title with a text under" />

                <Button
                    android:id="@+id/under_text_test"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    style="@style/description_style"
                    android:text="Styled text and stroke" />

                <Button
                    android:id="@+id/styled_text_and_stroke"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_3"
                    style="@style/description_style"
                    android:text="show error message" />

                <Button
                    android:id="@+id/error_text_test"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_4"
                    style="@style/description_style"
                    android:text="A success message" />

                <Button
                    android:id="@+id/success_text_test"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />


                <TextView
                    android:id="@+id/txt_5"
                    style="@style/description_style"
                    android:text="A warning message, with a listener bind to the Confirm-button..." />

                <Button
                    android:id="@+id/warning_confirm_test"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_6"
                    style="@style/description_style"
                    android:text="A warning message, with listeners bind to Cancel and Confirm button..." />

                <Button
                    android:id="@+id/warning_cancel_test"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_7"
                    style="@style/description_style"
                    android:text="A message with a custom icon" />

                <Button
                    android:id="@+id/custom_img_test"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_8"
                    style="@style/description_style"
                    android:text="A message with neutral button" />

                <Button
                    android:id="@+id/neutral_btn_test"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_9"
                    style="@style/description_style"
                    android:text="Disabled OK button" />

                <Button
                    android:id="@+id/disabled_btn_test"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_10"
                    style="@style/description_style"
                    android:text="Custom view" />

                <Button
                    android:id="@+id/custom_view_test"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_11"
                    style="@style/description_style"
                    android:text="Custom btn colors" />

                <Button
                    android:id="@+id/custom_btn_colors_test"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutContainer2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/layoutContainer1"
                app:layout_constraintTop_toTopOf="parent">

                <!-- My Custom Layout -->
                <TextView
                    android:id="@+id/txt_12"
                    style="@style/description_style"
                    android:text="Custom Succes Alert Dialog" />

                <Button
                    android:id="@+id/custom_success_dialog"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_13"
                    style="@style/description_style"
                    android:text="Custom Warning Alert Dialog" />

                <Button
                    android:id="@+id/custom_warning_dialog"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_14"
                    style="@style/description_style"
                    android:text="Custom Error Alert Dialog" />

                <Button
                    android:id="@+id/custom_error_dialog"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

                <TextView
                    android:id="@+id/txt_15"
                    style="@style/description_style"
                    android:text="Custom Input Alert Dialog" />

                <Button
                    android:id="@+id/custom_input_dialog"
                    style="@style/dialog_red_button"
                    android:layout_margin="10dp"
                    android:text="Try me!" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>